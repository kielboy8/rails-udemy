<% if @article.errors.any? %>
<h2>The following errors prevent the article from being created.</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li>
    <%= msg %>
  </li>
  <% end %>
</ul>
<% end %>

<!--  form_for(@article, :html => {class: "form-horizontal", role: "form"} do |f| -->
<%= form_for(@article, :html => {role: "form"}) do |f| %>
<div class="form-group row mt-4">
  <div class="col-sm-2 col-form-label">
    <%= f.label :title, "Title of article", class: "float-right font-weight-bold" %>
  </div>
  <div class="col-sm">
    <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
  </div>
</div>
<div class="form-group row mt-4">
  <div class="col-sm-2 col-form-label">
    <%= f.label :description, "Article description", class: "float-right font-weight-bold"  %>
  </div>
  <div class="col-sm">
    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description" %>
  </div>
</div>
<div class="form-group row mt-4">
  <div class="col-sm-2 offset-sm-2">
    <%= f.submit class: "btn btn-primary" %>
  </div>
</div>
<% end %>

<div class="text-center mt-4">
  <p class="lead">
    <%= link_to  "Back to articles listing", articles_path, class: "text-decoration-none" %>
  </p>
</div>

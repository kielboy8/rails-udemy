<% if @user.errors.any? %>
<h2>The following errors prevent the article from being created.</h2>
<ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li>
        <%= msg %>
    </li>
    <% end %>
</ul>
<% end %>

<h1 class="display-4 font-weight-normal text-center">Sign Up for Alpha Blog</h1>

<!--  form_for(@article, :html => {class: "form-horizontal", role: "form"} do |f| -->
<%= form_for(@user, :html => {role: "form"}) do |f| %>
<div class="form-group row mt-4">
    <div class="col-sm-2 col-form-label">
        <%= f.label :username, "Username", class: "float-right font-weight-bold" %>
    </div>
    <div class="col-sm">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter Username" %>
    </div>
</div>
<div class="form-group row mt-4">
    <div class="col-sm-2 col-form-label">
        <%= f.label :email, "Email", class: "float-right font-weight-bold"  %>
    </div>
    <div class="col-sm">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
</div>
<div class="form-group row mt-4">
    <div class="col-sm-2 col-form-label">
        <%= f.label :password, "Password", class: "float-right font-weight-bold"  %>
    </div>
    <div class="col-sm">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
</div>
<div class="form-group row mt-4">
    <div class="col-sm-2 offset-sm-2">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
    </div>
</div>
<% end %>

<div class="text-center mt-4">
    <p class="lead">
        <%= link_to  "Back to home", root_path, class: "text-decoration-none" %>
    </p>
</div>